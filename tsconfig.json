{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "source/**/*.ts",
    "source/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}