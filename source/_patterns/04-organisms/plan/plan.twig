{% include "@cells/header/header.twig" %}
<main
	class="container mx-auto my-4 px-2">
  {% include "@organisms/plan/section-list.twig" with {
    wrapper_classes: [
      'block',
      'md:hidden',
  ]} %}
	<section
		class="flex justify-between">
		<div
			class="w-full md:w-2/3">
			<header>
				<h1
					class="text-4xl pb-3 border-b border-black">{{ sections[0].name }}</h1>
			</header>
			<section
				class="flex flex-col-reverse md:flex-row justify-between">
				<article>
					{% for index, section in sections %}
						{% if section.content %}
							{{ section.content }}
						{% endif %}
					{% endfor %}
				</article>
			</section>
		</div>
    {% include "@organisms/plan/section-list.twig" with {
      wrapper_classes: [
        'hidden',
        'md:block',
        'overflow-y-auto',
        'sticky',
        'top-10',
        'max-h-(screen-16)',
      ]} %}
	</section>
</main>
{% include "@cells/footer/footer.twig" %}
